{
  "global": {
    "variables": {
      "videoSample": "https://file-examples.com/storage/feaef18a3c6587263a0ed0e/2017/04/file_example_MP4_1280_10MG.mp4",
      "colorTransition": "#000000"
    },
    "orientation": "landscape",
    "musicEnabled": false,
    "transitionDuration": 0.5
  },
  "sections": [
    {
      "name": "test_video",
      "type": "video",
      "visibility": ["video_segment"],
      "options": {
        "videoUrl": "{{ videoSample }}",
        "duration": 2
      },
      "filters": [
        {
          "type": "fadein",
          "values": {
            "color": "{{ colorTransition }}"
          }
        }
      ]
    }
  ]
}
